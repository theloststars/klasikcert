{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "tailwind-dev": "npx tailwindcss -i ./resources/css/tailwind.css -o ./public/css/tailwind.css",
        "tailwind-prod": "npx tailwindcss -i ./resources/css/tailwind.css -o ./public/css/tailwind.css --minify",
        "tailwind-watch": "npx tailwindcss -i ./resources/css/tailwind.css -o ./public/css/tailwind.css --watch"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.4.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.7",
        "axios": "^0.21",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.4.14",
        "postcss-import": "^14.0.1",
        "tailwindcss": "^3.1.6"
    }
}
